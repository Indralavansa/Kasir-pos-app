# Production Environment Variables
# Copy this file to .env and fill in actual values

# For local development (SQLite) - leave empty or comment out
# DATABASE_URL will default to sqlite if not set

# For production (Neon PostgreSQL) - uncomment and set your values
# DATABASE_URL=postgresql://user:password@endpoint.neon.tech:5432/database

# Flask Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here-generate-a-strong-one

# Flask Environment
FLASK_ENV=production
